@model PaymentRecordCreateViewModel;

@{
    ViewData["Title"] = "New Payment";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadscrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Payroll List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Pay Compudation</li>
                    </ol>
                </nav><br />
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmployeeId"></label>
                        <select class="form-control" asp-for="EmployeeId" asp-items="ViewBag.employees">
                            <option selected>-- Selecy Employee --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div><br /><br />
                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label asp-for="PayMonth"></label>
                        </div>
                        <div class="form-control col-md-3">
                            <select class="form-control" asp-for="PayMonth">
                                <option selected>-- Select Month --</option>
                                <option>January</option>
                                <option>February</option>
                                <option>March</option>
                                <option>April</option>
                                <option>May</option>
                                <option>June</option>
                                <option>July</option>
                                <option>August</option>
                                <option>September</option>
                                <option>October</option>
                                <option>November</option>
                                <option>December</option>
                            </select>
                            <span asp-validation-for="PayMonth"></span>
                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="TaxYearID"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <select class="form-control" asp-for="TaxYearID" asp-items="ViewBag.taxYears">
                                <option selected>-- Select Tax Year --</option>
                            </select>
                            <span asp-validation-for="TaxYearID"></span>
                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="PayDate"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="PayDate" type="date" />
                            <span asp-validation-for="PayDate"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label asp-for="HourlyRate"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="HourlyRate" placeholder="0.00" />
                            <span asp-validation-for="HourlyRate"></span>
                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="HoursWorked"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="HoursWorked" />
                            <span asp-validation-for="HoursWorked"></span>
                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="ContractualHours"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="ContractualHours"/>
                            <span asp-validation-for="ContractualHours"></span>
                        </div>
                    </div><br /><br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary float-left">Compute & Save</button>
                        <a asp-action="Index" class="btn btn-primary float-right">Back Payroll List</a>
                        <br />
                        <br />
                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}