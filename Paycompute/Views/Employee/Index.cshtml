@model IEnumerable<EmployeeIndexViewModel>;

@{
    ViewData["Title"] = "Employee";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadscrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-outline-success" asp-action="Create">Create New Employee</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee No.</th>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Designation</th>
                                    <th>City</th>
                                    <th>Joined</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.EmployeeNo
                                            </a>
                                        </td>
                                        <td><img src="@Url.Content(item.ImageUrl)" alt="image" class="img-employee"/></td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Designation</td>
                                        <td>@item.City</td>
                                        <td>@item.DateJoined</td>
                                        <td>
                                            <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                                Edit
                                            </a>
                                            <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                                Details
                                            </a>
                                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
