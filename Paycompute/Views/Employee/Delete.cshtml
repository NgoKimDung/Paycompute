@model EmployeeDeleteViewModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadscrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete Employee</li>
                    </ol>
                </nav><br />
                <h2 style="color:red">Are you sure you want to delete this employee?</h2>
                <form method="post" enctype="multipart/form-data" asp-action="Delete">
                    <div class="form-group">
                        <input asp-for="FullName" readonly class="form-control"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary float-left">Delete</button>
                        <a asp-action="Index" class="btn btn-primary float-right">Back</a>
                        <br />
                        <br />
                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
